<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginVertical="@dimen/smaller_space_new">
       <ImageView
           android:id="@+id/im_favorites"
           android:layout_width="100dp"
           android:layout_height="140dp"
           android:layout_marginEnd="@dimen/extra_medium_space_new"
           android:background="@drawable/rectangle_rounded_10_gray">
       </ImageView>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center_vertical"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/TextContentWhiteBold"
               tools:text="Spiderman"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/small_space"
               style="@style/TextContentGrey"
               tools:text="lorem ipsum dolor sit amet"/>


       </LinearLayout>
   </LinearLayout>
</LinearLayout>