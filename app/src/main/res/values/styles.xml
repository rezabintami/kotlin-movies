<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextMenu">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextGrayMenu</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/text_space_small</item>
    </style>

    <style name="TextContentWhiteBold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContentGrey">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>